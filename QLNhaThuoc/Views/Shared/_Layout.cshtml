    <!-- Footer Section End -->
    <!-- Js Plugins -->
    <script src="Content/Try/js/jquery-3.3.1.min.js"></script>
    <script src="Content/Try/js/bootstrap.min.js"></script>
    <script src="Content/Try/js/jquery.nice-select.min.js"></script>
