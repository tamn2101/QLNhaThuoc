<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>
    <!--Header-->
    <header class="header">
        <div class="header__top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-8">
                        <div class="header__top__left navbar-nav navbar-left">
                            <ul>
                                <li><i class="fa fa-envelope"></i> sale@nhathuocclongchau.com.vn</li>
                                <li><i class="fa fa-phone"></i> (028)73023456 </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4">
                        <div class="header__top__right navbar-nav navbar-right">
                            @Html.Partial("_LoginPartial")
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="header__below__top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="header__logo">
                            <a href="./Home/index.html"><img src="~/Content/Try/img/Logo_.svg.png" alt=""></a>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <nav class="header__menu">
                            <div>
                                <ul>
                                    <li>@Html.ActionLink("HOME", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                                    <li class="dropdown">
                                        <a href="#" class="dropbtn">SẢN PHẨM</a>
                                        <ul class="header__menu__dropdown">
                                            <li>@Html.ActionLink("THUỐC", "Index", "Thuocs", new { area = "" }, new { @class = "nav-link" })</li>
                                            <li>@Html.ActionLink("THIẾT BỊ Y TẾ", "Index", "ThietBiYTes", new { area = "" }, new { @class = "nav-link" })</li>
                                            <li>@Html.ActionLink("THỰC PHẨM CHỨC NĂNG", "Index", "ThucPhamChucNangs", new { area = "" }, new { @class = "nav-link" })</li>
                                            <li>@Html.ActionLink("DƯỢC MỸ PHẨM", "Index", "DuocMyPhams", new { area = "" }, new { @class = "nav-link" })</li>
                                        </ul>
                                    </li>
                                    <li>@Html.ActionLink("GÓC SỨC KHỎE", "Index", "GocSucKhoe", new { area = "" }, new { @class = "nav-link" })</li>
                                </ul>
                            </div>
                        </nav>
                    </div>
                    <div class="col-lg-3">
                        <div class="header__cart">
                            <ul>
                                <li><a href="./Cart/Index"><i class="fa fa-shopping-bag"></i> @*<span>3</span>*@</a></li>
                            </ul>
                            @*<div class="header__cart__price">item: <span>$150.00</span></div>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    @RenderBody()



    <!-- Footer Section Begin -->
    <footer class="footer spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="footer__about">
                        <div class="footer__about__logo">
                            <a href="./index.html"><img src="~/Content/images/logo_1.png" alt=""></a>
                        </div>
                        <ul>
